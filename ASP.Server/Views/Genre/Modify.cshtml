@using ASP.Server.Controllers
@model ModifyGenreModel
@{
    ViewData["Title"] = "Add a genre";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}

</style>

<h1>Modify genre</h1>
<!-- Voici une facon de faire, mais ce n'est pas la seul, a vous de jouer ! -->
<form asp-controller="Genre" asp-action="Modify">
    <input type="hidden" value="@Model.Id" name="idtomodify"/>
    <div class="input-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" value="@Model.Name" />
    </div>
    <a class="genre list link" asp-area="" asp-controller="Genre" asp-action="List">Display list of genres</a>
    <input type="submit" value="Update" style="width: 100%; margin-top: 50px" />
</form>